{
  "manifest_version": 3,
  "name": "StreamScore",
  "version": "1.0",
  "description": "See IMDb, Rotten Tomatoes, and Metacritic ratings on Netflix & Prime.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.amazon.com/*",
        "*://*.primevideo.com/*",
        "*://*.disneyplus.com/*",
        "*://*.hulu.com/*",
        "*://*.max.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
