{
  "manifest_version": 3,
  "name": "StreamScore: Movie Ratings",
  "version": "1.0",
  "description": "Get IMDb, Rotten Tomatoes, and Metacritic scores on streaming sites.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}